<div id="dashboard_show">
  <%= render 'layouts/banner'; %>

  <div id="links">
    <div class="wrapper_skinny1">
      <ul>
        <li><%= link_to "Manage Comments", comments_path %></li>
        <li><%= link_to "Manage Grades", grades_path %></li>
        <li class="current">Manage Users</li>
        <li><%= link_to "Manage Courses", courses_path %></li>
        <li><%= link_to "Create PDF report", welcome_search_path %></li>
      </ul>
    </div>
  </div>
</div>

<div class="wrapper_wide" style="padding-bottom: 5em;">
  <div class="pull-right" style="margin-bottom: 20px;">
       <%= link_to 'Create New User', new_user_path, class: 'btn btn-primary' %>
  </div>


  <table class="table table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role.name %></td>
          

          <td colspan="3" style="width: 20%;">
            <%= link_to edit_user_path(user), class: 'btn btn-primary' do %>
              <i class='fa fa-pencil-square-o'></i>
            <% end %>
            
            <div style="display:inline-block;">
              <button class="delete-confirm btn btn-danger"><i class="fa fa-trash-o"></i></button>
              <%= link_to user, method: :delete, class: 'delete-button' do%>
                <i class='fa fa-pencil-square-o'></i>
              <% end %>
            </div>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pull-right">
    <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
  </div>
</div>
