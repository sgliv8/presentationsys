<% if @grade.errors.any? %>
  <div class="alert alert-danger">
    <% @grade.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>


<div class="grade-content">

  <%= form_for(@grade) do |f| %>

    <%= f.hidden_field :course_id, class: "input-control" %>


    <div class="group-info group-info-edit clearfix">
        <div class="col-md-6">
          <div class="group-num"><strong>Group #:</strong></div> 
          <%= f.text_field :group, class: "input-control group-num-input" %>
        </div>
        <div class="col-md-6">
          <div class="project-name"><strong>Project Name:</strong></div>
          <%= f.text_field :project, class: "input-control project-name-input" %>
        </div>
    </div>

    <div class="question question-edit clearfix">
          <div class="col-md-6 question-section" id="grade_q1">
            <%= if @inquestions1.present?
                @inquestions1.gq1 
              else
                @grade.course.gq1
              end
          %>
          </div>
          <div class="col-md-6 grade-section">
            <% [ '1', '2', '3', '4', '5' ].each do |opport| %>
              <p style="display:inline-block;" class="grade-checkbox"><%= radio_button_tag 'grade[opport]', opport, @grade.opport == opport %>
              <%= label_tag "opport_#{opport}", opport.humanize %></p>
            <% end %>
          </div>
          <div class="col-md-12 comment-content comment-edit">
             <span class="fa fa-comment"></span> Comment: 
             <%= f.text_area :opport_c, class: 'input-control comment-textarea' %>
          </div>
    </div>

