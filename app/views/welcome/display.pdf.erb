
<div>
  <h1>Summary report of the presentation</h1>

  <% @reportComments.each do |comment| %>
    <div style='page-break-after:always;' style="padding-top: 1.5em;">
      <h3 style="font-size: 25px; color: #33a3dc; font-weight: 400; text-align: center; margin-bottom: 40px;">Comment Report Details</h3>

      <div class="grade-content">
          <div style="padding-left: 5px;padding-right: 5px; content: " "; display: table; clear: both;">
            <p style="font-size: 18px; margin-bottom: 5px; color: #196890; float:left;"><strong>Group #:</strong> <%= comment.group %></p>
            <p style="font-size: 18px; margin-bottom: 5px; color: #196890; float:right;"><strong>Project Name:</strong> <%= comment.project %></p>
          </div>

          <div style="padding: 0 5px; border-bottom: 2px solid #196890;content: " "; display: table; clear: both;">
            <p jm ystyle="font-size: 18px; margin-bottom: 5px; color: #196890; float:left;"><strong>Course:</strong> <%= comment.course.course_name %></p> 
          </div>

          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;"><%= comment.course.cq1 %></div>
              <div style=" width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.strength %>
                 </div>
              </div>
          </div>

          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;"><%= comment.course.cq2 %></div>
              <div style=" width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.weakness %>
                 </div>
              </div>
          </div>

          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;"><%= comment.course.cq3 %></div>
              <div style=" width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.improvement %>
                 </div>
              </div>
          </div>


          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;"><%= comment.course.cq4 %></div>
              <div style=" width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.fund %>
                 </div>
              </div>
          </div>

      </div>
    </div>
  <% end %>


  <% @reportGrades.each do |grade| %>
    <div style='page-break-after:always;' style="padding-top: 1.5em;">
      
        <h1 class="grade-header">Grading Details</h1>

        <div class="grade-content">
            <div class="group-info cf" style="border-bottom: 0;">
              <p class="pull-left"><strong>Group #:</strong> <%= grade.group %></p>
              <p class="pull-right"><strong>Project Name:</strong> <%= grade.project %></p>
            </div>
            <div class="group-info cf">
                <p class="pull-left"><strong>Course:</strong> <%= grade.course.course_name %></p>
               <p class="pull-right">
                  <strong><span class="fa fa-calculator"></span> Final Grade:</strong>
                  <span style="color: #B83936;"><%= grade.totalscore %></span>
               </p>
            </div>
            <div class="criteria">Does the presentation provide a complete and compelling explanation of: </div>

            <div class="question">
                <div class="col-md-6 question-section"><%= grade.course.gq1 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.opport %></h4>
                <div class="col-md-12 comment-content cf">
                   <span class="fa fa-comment"> Instructor Comment:</span>
                   <div class="content">
                      <%= grade.opport_c %>
                   </div>
                </div>
            </div>

            <div class="question cf">
                <div class="col-md-6 question-section"><%= grade.course.gq2 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.cost %></h4>
