<style>
  .cf:before, .cf:after {
    content: " ";
    display: table;
  }

  .cf:after {
    clear: both;
  }
</style>


<div>
  <h1>Summary report of the presentation</h1>

  <% @reportComments.each do |comment| %>
    <div style='page-break-after:always;' style="padding-top: 1.5em;">
      <h3 style="font-size: 25px; color: #33a3dc; font-weight: 400; text-align: center; margin-bottom: 40px;">Comment Report Details</h3>

      <div class="grade-content">
          <div style="padding-left: 5px;padding-right: 5px;" class="cf">
            <p style="font-size: 18px; color: #196890; float:left;"><strong>Group #:</strong> <%= comment.group %></p>
            <p style="font-size: 18px; 5px; color: #196890; float:right;"><strong>Project Name:</strong> <%= comment.project %></p>
          </div>

          <div style="padding: 0 5px; border-bottom: 2px solid #196890;" class="cf">
            <p style="font-size: 18px; margin-bottom: 5px; color: #196890; float:left;"><strong>Course:</strong> <%= comment.course.course_name %></p> 
          </div>

          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;">1. <%= comment.course.cq1 %></div>
              <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.strength %>
                 </div>
              </div>
          </div>

          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;">2. <%= comment.course.cq2 %></div>
              <div style=" width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.weakness %>
                 </div>
              </div>
          </div>

          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;">3. <%= comment.course.cq3 %></div>
              <div style=" width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.improvement %>
                 </div>
              </div>
          </div>


          <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
              <div style="width: 100%; padding: 13px 0; font-size: 20px; font-weight: 600px;">4. <%= comment.course.cq4 %></div>
              <div style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                 <span style="color: #196890;"> Comment:</span>
                 <div style="padding: 5px; word-wrap: break-word;">
                    <%= comment.fund %>
                 </div>
              </div>
          </div>

      </div>
    </div>
  <% end %>


  <% @reportGrades.each do |grade| %>
    <div style='page-break-after:always;' style="padding-top: 1.5em;">
      
        <h1 style="font-size: 25px;color: #33a3dc;font-weight: 400;text-align: center; margin-bottom: 40px;">Grading Details</h1>

        <div class="grade-content">
            <div class="cf" style="padding: 0 15px;">
              <p style="font-size: 18px; color: #196890; float:left;"><strong>Group #:</strong> <%= grade.group %></p>
              <p style="font-size: 18px; color: #196890; float:right;"><strong>Project Name:</strong> <%= grade.project %></p>
            </div>
            <div class="cf" style="padding: 0 15px; border-bottom: 2px solid #196890;">
                <p style="font-size: 18px; margin-bottom: 5px; color: #196890; float:left;"><strong>Course:</strong> <%= grade.course.course_name %></p>
               <p style="font-size: 18px; margin-bottom: 5px; color: #196890; float:right;">
                  <strong><span class="fa fa-calculator"></span> Final Grade:</strong>
                  <span style="color: #B83936;"><%= grade.totalscore %></span>
               </p>
            </div>
            <div style="padding: 15px 5px;font-size: 18px; background: #33a3dc; color: #FFFFFF;">Does the presentation provide a complete and compelling explanation of: </div>

            <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
                <div style="width: 100%; padding: 13px 0;"><strong>a. </strong><%= grade.course.gq1 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.opport %></h4>
                <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                   <span> Instructor Comment:</span>
                   <div style="padding: 5px; word-wrap: break-word;">
                      <%= grade.opport_c %>
                   </div>
                </div>
            </div>


            <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
                <div style="width: 100%; padding: 13px 0;"><strong>b. </strong><%= grade.course.gq2 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.cost %></h4>
                <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                   <span> Instructor Comment:</span>
                   <div style="padding: 5px; word-wrap: break-word;">
                      <%= grade.cost_c %>
                   </div>
                </div>
            </div>
            

            <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
                <div style="width: 100%; padding: 13px 0;"><strong>c. </strong><%= grade.course.gq3 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.timeline %></h4>
                <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                   <span> Instructor Comment:</span>
                   <div style="padding: 5px; word-wrap: break-word;">
                      <%= grade.timeline_c %>
                   </div>
                </div>
            </div>
            
            <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
                <div style="width: 100%; padding: 13px 0;"><strong>d. </strong><%= grade.course.gq4 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.obstacle %></h4>
                <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                   <span> Instructor Comment:</span>
                   <div style="padding: 5px; word-wrap: break-word;">
                      <%= grade.obstacle_c %>
                   </div>
                </div>
            </div>


            <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
                <div style="width: 100%; padding: 13px 0;"><strong>e. </strong><%= grade.course.gq5 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.risk %></h4>
                <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                   <span> Instructor Comment:</span>
                   <div style="padding: 5px; word-wrap: break-word;">
                      <%= grade.risk_c %>
                   </div>
                </div>
            </div>

            <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
                <div style="width: 100%; padding: 13px 0;"><strong>f. </strong><%= grade.course.gq6 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.point %></h4>
                <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                   <span> Instructor Comment:</span>
                   <div style="padding: 5px; word-wrap: break-word;">
                      <%= grade.point_c %>
                   </div>
                </div>
            </div>

            <div style="padding: 10px 5px 25px; font-size: 15px; border-bottom: 1px solid rgba(34,41,46,0.4);">
                <div style="width: 100%; padding: 13px 0;"><strong>g. </strong><%= grade.course.gq7 %></div>
                <h4 style="color: #b83936; padding-left: 10px;">Grade: <%= grade.fund %></h4>
                <div class="cf" style="width: 100%; padding: 10px 0; background: #E9E9E9; border-radius: 5px;">
                   <span> Instructor Comment:</span>
                   <div style="padding: 5px; word-wrap: break-word;">
                      <%= grade.fund_c %>
                   </div>
                </div>
            </div>

          </div>


    </div>
  <% end %>


</div>
