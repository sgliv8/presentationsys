<div class="content-wrapper">
    <h2 class="auth-header">Please Log In</h2>

    <div class="auth-main">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, class: "input-control auth-input", placeholder: 'Email' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "input-control auth-input auth-input-last", placeholder: 'Password' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="remember-section">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div>
          <%= f.submit 'Log In', class: "primary-button auth-button" %>
        </div>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>
</div>
