<div class="content-wrapper">
  <h2 class="auth-header">Create New Account</h2>

  <div class="auth-main">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.text_field :first_name, class: "input-control auth-input", placeholder: 'First Name' %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autocomplete: "off", class: "input-control auth-input", placeholder: 'Last Name' %>
        </div>

        <div class="field">
          <%= f.email_field :email, autocomplete: "off", class: "input-control auth-input", placeholder: 'Email' %>
        </div>

        <div class="field">
          <% if @validatable %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "input-control auth-input", placeholder: 'Password - 8 characters minimum' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-control auth-input", placeholder: 'Confirm Password' %>
        </div>

        <div class="form-group">
          <%= collection_select :user, :role_id, Role.first(2), :id, :name, {prompt: "Please select a role"}, {class: 'input-control'} %>
        </div>

        <div class="actions">
          <%= f.submit "Create Account", class: "primary-button auth-button" %>
        </div>
      <% end %>
  </div>

  <%= render "devise/shared/links" %>

</div>


